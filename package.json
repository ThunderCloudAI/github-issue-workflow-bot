{
  "name": "github-webhook-prototype",
  "version": "1.0.0",
  "description": "A simple prototype for receiving GitHub webhook events using AWS API Gateway, Lambda, and SQS with CDK",
  "main": "lib/webhook-stack.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "ci:check": "npm run lint && npm run format:check && npm run typecheck && npm run test:coverage",
    "cdk": "cdk",
    "bootstrap": "cdk bootstrap",
    "synth": "cdk synth",
    "deploy": "cdk deploy",
    "destroy": "cdk destroy"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.0",
    "@types/express": "^4.17.0",
    "@types/jest": "^29.5.0",
    "@types/node": "20.1.0",
    "@types/supertest": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "@vitest/ui": "^1.0.0",
    "aws-cdk": "2.95.1",
    "eslint": "^8.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.6.2",
    "supertest": "^6.3.0",
    "ts-jest": "^29.1.0",
    "tsx": "^4.20.4",
    "typescript": "~5.1.3",
    "vitest": "^1.0.0"
  },
  "dependencies": {
    "@aws-sdk/client-sqs": "^3.0.0",
    "@octokit/rest": "^20.0.0",
    "aws-cdk-lib": "2.95.1",
    "constructs": "^10.0.0",
    "express": "^4.18.0",
    "node-pty": "^1.0.0",
    "source-map-support": "^0.5.21"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.test.ts"
    ]
  }
}
